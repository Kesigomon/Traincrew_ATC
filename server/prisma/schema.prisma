// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Closure {
  name    String  @id @db.VarChar(100)
  diaName String?
  routes  Route[]

  @@index([diaName], type: Hash)
  @@map("closure")
}

model ClosureDistance {
  from     String
  to       String
  distance Int

  @@id([from, to])
  @@map("closure_distance")
}

model Route {
  diaName  String    @id @db.VarChar(20)
  closures Closure[]

  @@map("route")
}

model ClosureOnRoutes {
  closureName String @db.VarChar(100)
  diaName     String @db.VarChar(20)
  index       BigInt

  @@id([closureName, diaName])
  @@unique([closureName, diaName, index])
  @@map("closure_on_routes")
}
